<nav class="nav-page" aria-label="date navigation">
    <div>
        <a class="nav-page-previous" href="{{ path }}?{{
            {
                cals: cals|join(' '),
                mode: mode,
                date: date|date_modify('-1 day')|date('Y-m-d')
            }
            |url_encode()
            |replace({"%20": "+"})
        }}">Previous</a>
        <a href="{{ path }}?{{
            {
                cals: cals|join(' '),
                mode: mode,
                date: 'today'
            }
            |url_encode
            |replace({"%20": "+"})
        }}">Today</a>
        {% if now %}
        <a href="{{ path }}?{{
            {
                cals: cals|join(' '),
                mode: mode,
                date: 'now'
            }
            |url_encode
            |replace({"%20": "+"})
        }}">This Hour</a>
        {% endif %}
        <a class="nav-page-next" href="{{ path }}?{{
            {
                cals: cals|join(' '),
                mode: mode,
                date: date|date_modify('+1 day')|date('Y-m-d')
            }
            |url_encode()
            |replace({"%20": "+"})
        }}">Next</a>
        {% if not path %}
        <a><button class="jump">Jump to Date</button></a>
        {% endif %}
    </div>
    {% if staff %}
    <div>
        <a href="{{ path }}?{{
            {
                cals: cals|join(' '),
                mode: mode == 'full' ? 'slim' : 'full',
                date: date|date('Y-m-d')
            }
            |url_encode
            |replace({"%20": "+"})
        }}">Switch to {{ mode == 'full' ? 'slim' : 'full' }} mode</a>
    </div>
    {% endif %}
</nav>
